<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_image_placeholder" />

            <Button
                android:id="@+id/update_image"
                style="@style/Button"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:text="Update pic"
                android:textColor="@color/light_green" />

            <Button
                android:id="@+id/logout"
                style="@style/Button"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_logout" />

        </LinearLayout>

        <EditText
            android:id="@+id/create_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColor="@color/light_grey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/update_specialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Business name"
            android:textColor="@color/light_grey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/update_param1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Specialty"
            android:textColor="@color/light_grey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/update_param2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tax ID"
            android:textColor="@color/light_grey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/update_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zip code"
            android:textColor="@color/light_grey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/update_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="@color/light_grey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/update_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:textColor="@color/light_grey"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/update_account"
                style="@style/Button"
                android:layout_weight="1"
                android:text="Update" />

            <Button
                android:id="@+id/cancel_button"
                style="@style/Button"
                android:layout_weight="1"
                android:text="Cancel" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="75dp" />

    </LinearLayout>

</ScrollView>