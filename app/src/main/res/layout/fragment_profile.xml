<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_homeowner_icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/profile_homeowner_pin"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/pin"
                android:padding="10dp" />

            <TextView
                android:id="@+id/profile_homeowner_location"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="City, State"
                android:padding="10dp" />
        </TableRow>

        <TextView
            android:id="@+id/profile_homeowner_information"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:hint="profile details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_homeowner_icon" />

        <TextView
            android:id="@+id/profile_homeowner_projects_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="PREVIOUS PROJECTS"
            android:textColor="@color/light_green"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/profile_homeowner_projects"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_homeowner_information" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_homeowner_projects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_homeowner_projects_title" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NEW PROJECT" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>