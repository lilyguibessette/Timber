<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/Timber.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Create a Project" />

        <EditText
            android:id="@+id/create_project_name"
            style="@style/Timber.Hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Project Name" />

        <EditText
            android:id="@+id/create_project_type"
            style="@style/Timber.Hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Project Type" />

        <EditText
            android:id="@+id/create_budget"
            style="@style/Timber.Hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Budget" />

        <EditText
            android:id="@+id/create_project_description"
            style="@style/Timber.Hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Project description" />

        <ImageView
            android:id="@+id/add_image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_image_placeholder"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button
                android:id="@+id/create_button"
                style="@style/Button"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="Create" />

            <Button
                android:id="@+id/cancel_button"
                style="@style/Button"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="Cancel" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="75dp" />

    </LinearLayout>

</ScrollView>

