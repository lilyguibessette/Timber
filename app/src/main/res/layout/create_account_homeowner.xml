<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/homeowner_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="153dp" />

    <TextView
        android:id="@+id/homeowner_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="153dp" />

    <TextView
        android:id="@+id/homeowner_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zip code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="195dp" />

    <TextView
        android:id="@+id/homeowner_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="234dp" />

    <TextView
        android:id="@+id/homeowner_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone number"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="234dp" />

    <Button
        android:id="@+id/homeowner_form_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="632dp" />

</LinearLayout>