<resources>
    <!-- Base application theme. -->
    <style name="Theme.Timber" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_green</item>
        <item name="colorSecondaryVariant">@color/light_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Custom -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@color/light_grey</item>

    </style>e

    <style name="Timber.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Timber.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Timber.Hint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/hints</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Timber.BottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/text</item>
        <item name="itemTextColor">@color/light_green</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">45dp</item>
        <item name="android:clipToPadding">false</item>
    </style>


</resources>